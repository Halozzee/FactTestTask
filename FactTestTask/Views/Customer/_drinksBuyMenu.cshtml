@{
    var cardSize = 200;
}

@model List<DataLayer.Entities.DrinkWithAvailability>

<div class="container d-flex flex-wrap">
    @foreach (var item in Model)
    {
    <div class="card" width="@cardSize" height="@cardSize">
        <img class="card-img-top" src="@item.Drink.Img" width="@cardSize" height="@cardSize" enabled />
        @if (@item.DrinkAvailability.IsAvailable)
        {
            <button type="button" id="@item.Drink.Id buyBtn" class="btn btn-success" enabled onclick="buyDrink(@item.Drink.Id)">Купить</button>
        }
        else
        {
            <button type="button" id="@item.Drink.Id buyBtn" class="btn btn-danger" disabled>Нет в наличии</button>
        }

        <div class="card-body">
            <h5 class="card-title text-center">@item.Drink.Name</h5>
            <p class="card-text text-center">Стоимость: @item.Drink.Cost</p>
        </div>
    </div>
    }
</div>